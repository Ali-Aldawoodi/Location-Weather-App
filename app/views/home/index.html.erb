<h1 class="page-title">Multi-Location Weather Finder</h1>
<p>Enter your city: </p>
<%# form to send the user input to the home page %>
<%= form_with url: "/", method: :get do |form| %>
  <%= form.label :query, "Search for:" %>
  <%= form.text_field :query %>
  <%= form.submit "Search" %>
<% end %>

<%# Conditional that checks if the user has input anything and if so, display that city and its current temperature %>
<% if params[:query].present? %>
    <p>City Name: <%=@city_name%></p>
    <p>Current Temperature: <%= @current_temp%></p>
    <p>Current Precipitation: <%= @current_precip%></p>
    <p>Current Wind Speed: <%= @current_wind_speed%></p>

    <br>
<%# Iterates and displays over all the orders %>
<ol>
    <% @orders.each do |each| %>
    <li>
    <p>  <%= each %> </p> 
    </li>
    <% end %>
    <% end %>
</ol>

